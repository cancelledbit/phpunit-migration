{
    "name": "webimpress/phpunit-migration",
    "description": "Migrate your tests to the newest PHPUnit version",
    "license": "BSD-2-Clause",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "composer/semver": "^1.5.1 || ^2.0 || ^3.0",
        "symfony/console": "^4.4.8 || ^5.0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.20 || ^8.5.5 || ^9.1.5",
        "webimpress/coding-standard": "^1.1.5"
    },
    "autoload": {
        "psr-4": {
            "Webimpress\\PHPUnitMigration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebimpressTest\\PHPUnitMigration\\": "test/"
        }
    },
    "bin": ["bin/phpunit-migration"],
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
